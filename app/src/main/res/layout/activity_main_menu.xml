<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_no_gloss"
    >

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_goto_lesson"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        android:src="@drawable/main_learn"
        android:layout_above="@+id/btn_goto_play"
        android:layout_alignLeft="@+id/btn_goto_play"
        android:layout_alignStart="@+id/btn_goto_play" />

    <ImageButton

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_goto_play"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        android:src="@drawable/main_play"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_goto_char"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        android:src="@drawable/main_toon"
        android:layout_below="@+id/btn_goto_play"
        android:layout_alignLeft="@+id/btn_goto_play"
        android:layout_alignStart="@+id/btn_goto_play" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Timmah"
            android:src="@drawable/child"
            android:background="@null"
            android:layout_gravity="left|top" />
    </FrameLayout>

    <ImageButton
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:id="@+id/menuButton"
        android:background="@null"
        android:src="@drawable/settings"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />


</RelativeLayout>